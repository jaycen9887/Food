<!DOCTYPE html>
<html>
    <head>
        <title>Customer</title> 
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link rel="stylesheet" href="./css/main.css" />
    </head>
    <body>
        <div id="topics-list">
            <h1 class="float-left"><span id="topic-count"></span></h1><h1 class="title"> Topics</h1>
            <!-- Topics are dynamically generated by topics in database -->
            <div id="listed">
                <% menu.forEach((menuItem) => { %>
                    <div class = "topic list" id=<%=menuItem%>>
                        <h4><%=menuItem%></h4>
                    </div>
               <% });%>
            </div>
    
            <button title="New Topic" onclick="showAddTopicForm(); return false;" id="add-topic"><i class="fas fa-plus"></i></button>
    
        </div>
        <div id="topics-expanded">
            <!-- Title is generated by the selected topic -->
            <h1 class="title">Welcome</h1>
    
            <div id="topic-event-creation">
                <h5>Please select a topic to push to.</h5>
            </div>
    
            <!-- Form is post to the route of /?topic -->
    
        </div>

        <script src="./js/main.js"></script>
    </body>
</html>